<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Home"
    tools:showIn="@layout/activity_home">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="140dp"
        android:layout_marginRight="12dp"
        android:elevation="1dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_upload"
        android:tint="@color/colorPrimaryDark"
        android:visibility="invisible"
        app:backgroundTint="#FFE0B2"
        app:fabSize="mini" /><!--android:layout_marginBottom="180dp"-->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="12dp"
        android:elevation="1dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_dialog_email"
        android:tint="@color/colorPrimaryDark"
        android:visibility="invisible"
        app:backgroundTint="#FFE0B2"
        app:fabSize="mini" /><!--android:layout_marginBottom="130dp" -->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_atcion_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="6dp"
        android:elevation="2dp"
        android:src="@android:drawable/ic_input_add"
        android:tint="@color/colorPrimaryDark"
        app:backgroundTint="#FFE0B2"
        app:borderWidth="0dp"
        app:fabSize="normal" /><!--android:layout_marginBottom="60dp"-->

</android.support.design.widget.CoordinatorLayout>